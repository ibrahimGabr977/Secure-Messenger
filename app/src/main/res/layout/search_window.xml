<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_windowbg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/searchWindow_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.35"
        android:src="@drawable/profile_image_test1"
        app:layout_constraintVertical_bias="0.17"
        />

    <TextView
        android:id="@+id/searchWindow_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/searchWindow_image"
        app:layout_constraintEnd_toEndOf="@id/searchWindow_image"
        app:layout_constraintTop_toBottomOf="@id/searchWindow_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Ahmed Mohammed"
        android:textColor="@color/blackColor"
        android:textSize="16.1sp"
        android:textStyle="bold"
        android:gravity="bottom"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintVertical_bias="0.1"
        app:drawableEndCompat="@drawable/online_circled"
        android:drawablePadding="5dp"
        />


    <TextView
        android:id="@+id/searchWindow_click_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchWindow_text_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Send Message"
        android:background="@drawable/search_window_send_buttonbg"
        android:textColor="@color/whiteColor"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintVertical_bias="0.23"
        />







</androidx.constraintlayout.widget.ConstraintLayout>