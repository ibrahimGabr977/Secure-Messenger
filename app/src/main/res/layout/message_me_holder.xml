<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
  >




    <TextView
        android:id="@+id/messageHolder_text_me_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayColor"
        android:background="@drawable/message_holder_datebg"
        android:lines="1"
        android:textSize="7sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/messageHolder_text_content_me"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="27dp"
        android:paddingEnd="27dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/messageHolder_text_content_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whiteColor"
        android:textSize="13sp"
        android:background="@drawable/message_holder_mebg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageHolder_text_me_date"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="11dp"
        android:paddingTop="11dp"
        android:paddingEnd="11dp"
        android:paddingStart="11dp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginEnd="30dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>